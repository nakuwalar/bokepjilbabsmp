---
// src/layouts/Layout.astro
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
  image?: string; // Optional image for social sharing
}

const { title, description, image } = Astro.props;
const currentUrl = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title} | Astro Video</title>
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl.href} />
    {image && <meta property="og:image" content={new URL(image, Astro.site).href} />}
    <meta property="og:site_name" content="Astro Video" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={new URL(image, Astro.site).href} />}

    <link rel="canonical" href={currentUrl.href} />

    <ViewTransitions />
  </head>
  <body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 flex flex-col min-h-screen">
    <header class="bg-blue-600 dark:bg-blue-800 text-white p-4 shadow-md">
      <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold">Astro Video</a>
        <nav>
          <ul class="flex space-x-4">
            <li><a href="/" class="hover:underline">Beranda</a></li>
            <li><a href="/categories" class="hover:underline">Kategori</a></li>
            <li><a href="/search" class="hover:underline">Cari</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="flex-grow container mx-auto p-4 sm:p-6 lg:p-8">
      <slot />
    </main>

    <footer class="bg-gray-200 dark:bg-gray-800 p-4 text-center text-gray-700 dark:text-gray-300 mt-8">
      <div class="container mx-auto">
        &copy; {new Date().getFullYear()} bokepjilbabsmp. Hak Cipta Dilindungi.
      </div>
    </footer>
  </body>
</html>